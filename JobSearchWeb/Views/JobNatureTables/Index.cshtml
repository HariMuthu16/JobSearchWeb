@model IEnumerable<JobSearchWeb.Models.JobNatureTable>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="section-top-border">
        <h3 class="mb-30  text-center">Categories</h3>

        <p>
            @Html.ActionLink("New Job Nature", "Create", null, new { @class = "genric-btn primary circle" })
        </p>

        <div class="progress-table-wrap">
            <div class="progress-table">

                <div class="table-head">
                    <div class="serial">Sr.No</div>
                    <div class="country"> @Html.DisplayNameFor(model => model.JobNature)</div>
                    <div class="visit">Action</div>
                </div>

                    @foreach (var item in Model)
                          {
                              <div class="table-row">

                                  <div class="serial">01</div>
                                  <div class="country">  @Html.DisplayFor(modelItem => item.JobNature)</div>
                                  

                                  <div class="visit">
                                      @Html.ActionLink("Edit", "Edit", new { id = item.JobNatureID }, new { @class = "genric-btn warning circle mr-4" })

                                      @Html.ActionLink("Details", "Details", new { id = item.JobNatureID }, new { @class = "genric-btn info circle mr-4" })

                                      @Html.ActionLink("Delete", "Delete", new { id = item.JobNatureID }, new { @class = "genric-btn danger circle" })
                                  </div>
                             </div>

                          }

                </div></div></div></div>



                  
